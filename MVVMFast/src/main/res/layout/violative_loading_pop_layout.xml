<?xml version="1.0" encoding="utf-8"?>
<com.allen.library.shape.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_195"
    android:layout_height="@dimen/dp_84"
    android:orientation="vertical"
    app:shapeCornersRadius="@dimen/dp_8"
    app:shapeSolidColor="#CC000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="内容审核中，请稍等"
        android:textColor="#ffffffff"
        android:textSize="17sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_16"
        app:lottie_cacheComposition="true"
        app:lottie_fileName="lottie/white_loading.json"
        app:lottie_loop="true"
        app:lottie_renderMode="hardware" />
</com.allen.library.shape.ShapeLinearLayout>