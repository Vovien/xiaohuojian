<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jmbon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_currency</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_currency</item>
        <item name="colorSecondaryVariant">@color/color_currency</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlActivated">@color/color_currency</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">true</item>
<!--        <item name="android:textCursorDrawable">@drawable/color_cursor</item>-->
        <item name="android:overScrollMode">never</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowAnimationStyle">@style/AppGlobalAnimation</item>
<!--        android:screenOrientation="portrait"-->
    </style>

    <style name="Theme.Jmbon.NoActionBar">
        <item name="colorControlActivated">@color/color_currency</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Jmbon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Jmbon.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>