<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jmbon.widget.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        app:tl_iconVisible="false"
        app:tl_indicator_anim_duration="300"
        app:tl_indicator_anim_enable="true"
        app:tl_indicator_bounce_enable="false"
        app:tl_indicator_color="@color/color_currency"
        app:tl_indicator_corner_radius="@dimen/dp_3"
        app:tl_indicator_height="@dimen/dp_6"
        app:tl_indicator_width="@dimen/dp_12"
        app:tl_openTextDmg="true"
        app:tl_tab_padding="@dimen/dp_27"
        app:tl_tab_space_equal="false"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="@color/color_262626"
        app:tl_textSelectSize="@dimen/sp_16"
        app:tl_textUnSelectColor="@color/color_BFBFBF"
        app:tl_textUnSelectSize="@dimen/sp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>