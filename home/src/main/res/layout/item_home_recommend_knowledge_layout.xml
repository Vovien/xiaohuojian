<?xml version="1.0" encoding="utf-8"?>
<com.allen.library.shape.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="240dp"
    app:shapeCornersRadius="@dimen/dp_8">


    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_tube_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.allen.library.shape.ShapeLinearLayout
        android:id="@+id/ll_info"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_78"
        android:layout_marginBottom="@dimen/dp_8"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeCornersRadius="@dimen/dp_8"
        app:shapeSolidColor="#cc000000">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/alibaba_puhuiti_bold"
            android:singleLine="true"
            android:text="高龄试管婴儿"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:ellipsize="end"
            android:maxLines="2"
            android:alpha="0.7"
            android:text="年龄原来不是怀孕的“拦路虎”！"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            android:textStyle="bold" />
    </com.allen.library.shape.ShapeLinearLayout>

</com.allen.library.shape.ShapeConstraintLayout>