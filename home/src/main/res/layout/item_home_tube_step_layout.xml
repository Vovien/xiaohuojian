<?xml version="1.0" encoding="utf-8"?>
<com.allen.library.shape.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    android:gravity="center"
    android:paddingHorizontal="@dimen/dp_12"
    android:paddingVertical="@dimen/dp_18"
    app:shapeCornersRadius="@dimen/dp_16"
    app:shapeSolidColor="@color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#ff262626"
        android:textSize="16sp"
        android:paddingEnd="12dp"
        tools:text="文案文案文案" />

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        tools:src="@drawable/icon_more_info" />

</com.allen.library.shape.ShapeLinearLayout>