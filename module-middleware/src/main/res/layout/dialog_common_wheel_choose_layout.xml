<?xml version="1.0" encoding="utf-8"?>
<com.allen.library.shape.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shapeCornersTopLeftRadius="@dimen/dp_16"
    app:shapeCornersTopRightRadius="@dimen/dp_16"
    app:shapeSolidColor="@color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:gravity="center"
        android:textColor="@color/color_262626"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.github.gzuliyujiang.wheelview.widget.WheelView
        android:id="@+id/ww_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:wheel_atmosphericEnabled="true"
        app:wheel_curvedEnabled="true"
        app:wheel_curvedIndicatorSpace="4dp"
        app:wheel_indicatorColor="@color/color_E1E1E1"
        app:wheel_visibleItemCount="7"
        app:wheel_itemSpace="@dimen/dp_60"
        app:wheel_itemTextColor="@color/color_7F7F7F"
        app:wheel_itemTextColorSelected="@color/color_262626"
        app:wheel_itemTextSize="@dimen/sp_20"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

</com.allen.library.shape.ShapeConstraintLayout>