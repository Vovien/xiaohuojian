<?xml version="1.0" encoding="utf-8"?>
<com.allen.library.shape.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_72"
    android:paddingBottom="@dimen/dp_50"
    app:shapeCornersRadius="@dimen/dp_12"
    app:shapeSolidColor="@color/black80">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_copy_wechat_success_icon"
        android:drawablePadding="@dimen/dp_6"
        android:text="微信号复制成功"
        android:textColor="#FCC2DA"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_48"
        android:text="正在跳转至微信"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        app:lottie_autoPlay="true"
        app:lottie_fileName="copywechat.json"
        app:lottie_loop="true"
        app:lottie_renderMode="hardware" />
</com.allen.library.shape.ShapeLinearLayout>