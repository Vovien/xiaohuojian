<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/white_bg_corner_shape">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:text="分享到圈子"
        android:textColor="#ff262626"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/colorF9F9F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        tools:src="@drawable/gray_e5_raduis_6_bg" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_16"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="圈子昵称圈子昵称圈子昵称圈子昵称圈子昵称"
        android:textColor="@color/color_262626"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_cover" />


    <TextView
        android:id="@+id/tv_answer_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_below="@id/tv_message"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_2"
        android:background="@drawable/shape_circle_tag_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="xx问答"
        android:textColor="#ff7f7f7f"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintStart_toEndOf="@id/iv_cover" />

    <TextView
        android:id="@+id/tv_person_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_below="@id/tv_message"
        android:layout_marginLeft="@dimen/dp_4"
        android:background="@drawable/shape_circle_tag_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="xx圈友"
        android:textColor="#ff7f7f7f"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_answer_tag"
        app:layout_constraintStart_toEndOf="@id/tv_answer_tag"
        app:layout_constraintTop_toTopOf="@id/tv_answer_tag" />


    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/colorF9F9F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_cover" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/shape_btn_f5_radius_7_bg"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_24"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_24"
        android:text="TAG文章标题文章标题文章标题文章标题文章标题文章标题..."
        android:textColor="#ff262626"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/view_line2" />


    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/picture_color_e5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#ff7f7f7f"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_line4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line3" />

    <View
        android:id="@+id/view_line4"
        android:layout_width="@dimen/dp_1"
        android:layout_height="60dp"
        android:background="@color/picture_color_e5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line3" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="确认"
        android:textColor="#ff262626"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_line4"
        app:layout_constraintTop_toBottomOf="@id/view_line3" />
</androidx.constraintlayout.widget.ConstraintLayout>