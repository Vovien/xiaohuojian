<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:background="@drawable/white_bg_corner_shape">

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="wrap_content"
		android:layout_height="25dp"
		android:layout_marginStart="@dimen/dp_16"
		android:layout_marginTop="@dimen/dp_12"
		android:text="@string/share_to_external_faq"
		android:textColor="@color/color_262626"
		android:textSize="@dimen/sp_18"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


	<TextView
        android:id="@+id/text_tips"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/dp_16"
		android:layout_marginTop="@dimen/dp_4"
		android:layout_marginEnd="@dimen/dp_16"
		android:text="分享成功后会在问答模块自动创建问题，并填充已有回答"
		android:textColor="@color/color_BFBFBF"
		android:textSize="@dimen/sp_12" />


	<View
		android:id="@+id/view_line2"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_1"
		android:layout_marginTop="@dimen/dp_12"
		android:background="@color/colorF9F9F9"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/text_tips" />

	<TextView
		android:id="@+id/tv_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/dp_16"
		android:layout_marginTop="@dimen/dp_20"
		android:layout_marginEnd="@dimen/dp_16"
		android:background="@drawable/shape_btn_f5_radius_7_bg"
		android:paddingLeft="@dimen/dp_12"
		android:paddingTop="@dimen/dp_24"
		android:paddingRight="@dimen/dp_12"
		android:paddingBottom="@dimen/dp_24"
		tools:text="TAG文章标题文章标题文章标题文章标题文章标题文章标题..."
		android:textColor="#ff262626"
		android:textSize="16sp"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@id/view_line2" />


	<View
		android:id="@+id/view_line3"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_1"
		android:layout_marginTop="@dimen/dp_20"
		android:background="@color/picture_color_e5"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_content" />

	<TextView
		android:id="@+id/tv_cancel"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:gravity="center"
		android:text="取消"
		android:textColor="#ff7f7f7f"
		android:textSize="17sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/view_line4"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/view_line3" />

	<View
		android:id="@+id/view_line4"
		android:layout_width="@dimen/dp_1"
		android:layout_height="60dp"
		android:background="@color/picture_color_e5"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/view_line3" />

	<TextView
		android:id="@+id/tv_sure"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:gravity="center"
		android:text="确认"
		android:textColor="#ff262626"
		android:textSize="17sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/view_line4"
		app:layout_constraintTop_toBottomOf="@id/view_line3" />
</androidx.constraintlayout.widget.ConstraintLayout>