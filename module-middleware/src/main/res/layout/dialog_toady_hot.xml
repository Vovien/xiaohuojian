<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hl_cornerRadius="@dimen/dp_32"
    app:hl_shadowColor="#4D000000"
    app:hl_shadowHiddenTop="true"
    app:hl_shadowLimit="@dimen/dp_20">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pic_toady_hot_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_24">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:drawableStart="@drawable/search_sister_hot_img_icon"
            android:drawablePadding="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color_currency_error"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="为您更[新了x为更新了xx新了x为更新了xx新了x为更新了xx" />


        <TextView
            android:id="@+id/textContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:ellipsize="end"
            android:lineHeight="@dimen/dp_25"
            android:maxLines="2"
            android:text="奥委会撂挑子：北京冬奥会太成功，所以直接取消了每日例行协调会所以直接取消了每日例行协调会所以直接取消了每日例行协调会"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>


</com.lihang.ShadowLayout>