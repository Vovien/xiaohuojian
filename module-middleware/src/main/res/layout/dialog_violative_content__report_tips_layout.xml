<?xml version="1.0" encoding="utf-8"?>
<com.jmbon.widget.shadow.ShadowConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_68"
    android:layout_marginRight="@dimen/dp_68"
    android:background="@color/white"
    app:shadow_radius="@dimen/dp_8"
    app:shadow_shadowAlpha="0.03"
    app:shadow_shadowColor="#ff000000"
    app:shadow_shadowElevation="4.0dip">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center"
        android:text="内容违规提示"
        android:textColor="#ff262626"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"
        android:lineHeight="@dimen/dp_28"
        android:text="系统检测到您添加的内容仍然涉嫌违规，介于您多次提交均未通过，建议将内容上报官方审核。"
        android:textColor="#ff262626"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_height="wrap_content"
        android:text="注意：审核期间，您将暂时无法回答/提问功能。"
        android:textColor="#ff7f7f7f"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_20"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content" />

    <com.jmbon.widget.progress_button.JmbonButton
        android:id="@+id/tv_modify"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_33"
        android:gravity="center"
        android:text="继续修改"
        app:layout_constraintStart_toEndOf="@+id/tv_ok"
        android:textColor="@color/color_BFBFBF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:jCornersRadius="@dimen/dp_8"
        app:jSelectorNormalColor="@color/colorF5F5F5"
        app:jSelectorPressedColor="@color/colorF5F5F5"
        app:jUseSelector="true"
        app:layout_constraintEnd_toStartOf="@+id/tv_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tips"
        app:sUseSelector="true" />

    <com.jmbon.widget.progress_button.JmbonButton
        android:id="@+id/tv_ok"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_33"
        android:gravity="center"
        android:text="立即上报"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:jButtonStyle="green_full"
        app:jCornersRadius="@dimen/dp_8"
        app:jSelectorNormalColor="@color/color_0EA9B0"
        app:jSelectorPressedColor="@color/color_0EA9B0"
        app:jUseSelector="true"
        app:layout_constraintStart_toEndOf="@+id/tv_modify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tips"
        app:sUseSelector="true" />
</com.jmbon.widget.shadow.ShadowConstraintLayout>