<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_14"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_12"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jmbon.widget.SuperView
            android:id="@+id/text_article_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintEnd_toStartOf="@id/image_article_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />

        <com.jmbon.widget.SuperView
            android:id="@+id/text_article_title2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintEnd_toStartOf="@id/image_article_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_article_title"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />

        <com.jmbon.widget.SuperView
            android:id="@+id/text_article_title3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintEnd_toStartOf="@id/image_article_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_article_title2"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />

        <com.jmbon.widget.SuperView
            android:id="@+id/text_article_type"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@id/image_article_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />

        <com.jmbon.widget.SuperView
            android:id="@+id/image_article_bg"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_article_title"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.jmbon.widget.SuperView
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_article_title"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_12"
            android:layout_weight="1" />


        <com.jmbon.widget.SuperView
            android:id="@+id/text_comments"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_12"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />
    </LinearLayout>
</LinearLayout>