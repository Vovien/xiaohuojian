<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_14"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_12"
    android:orientation="vertical">

    <com.jmbon.widget.refresh.JmbonHeaderRefreshView
        android:id="@+id/jm_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jmbon.widget.SuperView
        android:id="@+id/text_article_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:vSelectorNormalColor="@color/ColorF5F5"
        app:vSelectorPressedColor="@color/ColorF5F5"
        app:vUseSelector="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical">


        <com.jmbon.widget.SuperView
            android:id="@+id/text_article_title2"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />

        <com.jmbon.widget.SuperView
            android:id="@+id/tv_time"
            android:layout_width="30dp"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />


    </RelativeLayout>

    <com.jmbon.widget.SuperView
        android:id="@+id/image_article_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_article_title"
        app:vSelectorNormalColor="@color/ColorF5F5"
        app:vSelectorPressedColor="@color/ColorF5F5"
        app:vUseSelector="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.jmbon.widget.SuperView
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_article_title"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_12"
            android:layout_weight="1" />


        <com.jmbon.widget.SuperView
            android:id="@+id/text_comments"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_12"
            app:vSelectorNormalColor="@color/ColorF5F5"
            app:vSelectorPressedColor="@color/ColorF5F5"
            app:vUseSelector="true" />
    </LinearLayout>

    <com.jmbon.widget.SuperView
        android:id="@+id/invite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_article_title"
        app:vSelectorNormalColor="@color/ColorF5F5"
        app:vSelectorPressedColor="@color/ColorF5F5"
        app:vUseSelector="true" />

    <com.jmbon.widget.SuperView
        android:id="@+id/raleted"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_article_title"
        app:vSelectorNormalColor="@color/ColorF5F5"
        app:vSelectorPressedColor="@color/ColorF5F5"
        app:vUseSelector="true" />

    <com.jmbon.widget.refresh.JmbonRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/jm_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:visibility="visible" />

</LinearLayout>