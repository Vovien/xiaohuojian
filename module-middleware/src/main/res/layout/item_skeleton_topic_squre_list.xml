<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_76"
    android:background="@color/transparent">

    <com.jmbon.widget.SuperView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:vSelectorNormalColor="@color/colorF5F5F5"
        app:vSelectorPressedColor="@color/colorF5F5F5"
        app:vCornersRadius="@dimen/dp_8"
        app:vUseSelector="true" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.jmbon.widget.SuperView
            android:id="@+id/tv_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            app:vSelectorNormalColor="@color/colorF5F5F5"
            app:vSelectorPressedColor="@color/colorF5F5F5"
            app:vUseSelector="true" />

        <com.jmbon.widget.SuperView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_100"
            app:vSelectorNormalColor="@color/colorF5F5F5"
            app:vSelectorPressedColor="@color/colorF5F5F5"
            app:vUseSelector="true" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>