<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:hl_cornerRadius="@dimen/dp_8"
    app:hl_shadowColor="#1A000000"
    app:hl_shadowHiddenTop="true"
    app:hl_shadowLimit="@dimen/dp_20">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/toast_message_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_23"
        android:paddingBottom="@dimen/dp_23">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_toStartOf="@+id/textEnd"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="为您更[新了x为更新了xx新了x为更新了xx新了x为更新了xx" />

            <TextView
                android:id="@+id/textEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:visibility="visible"
                tools:text="]圈子的消息" />
        </RelativeLayout>


        <TextView
            android:id="@+id/textMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="3"
            android:textColor="@color/color_currency"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="为您更新了xx条数据为您更新了xx条数据为您更新了xx条数据" />
    </LinearLayout>


</com.lihang.ShadowLayout>