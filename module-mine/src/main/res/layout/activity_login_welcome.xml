<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20">

    <ImageView
        android:id="@+id/iv_face"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="@dimen/dp_40"
        android:alpha="0"
        android:src="@drawable/icon_login_face"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:alpha="0"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_face">


        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎加入备孕小火箭"
            android:textColor="#ff262626"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="我们想了解您基本情况，以提供更好的服务"
            android:textColor="#ff262626"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


    <com.jmbon.widget.progress_button.JmbonButton
        android:id="@+id/sb_select_ok2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginBottom="@dimen/dp_50"
        android:alpha="0"
        android:enabled="true"
        android:text="@string/ok"
        android:textSize="@dimen/sp_16"
        app:jButtonStyle="green_full"
        app:jOnlyLoginToModifyState="false"
        app:jShowLoading="true"
        app:jShowLoadingWhenClick="true"
        app:jUseSelector="true"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>