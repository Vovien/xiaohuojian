<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_262626">

    <ImageView
        android:id="@+id/preview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:transitionName="imageUserAvatar" />

    <com.allen.library.SuperButton
        android:id="@+id/change_photo"
        android:layout_width="@dimen/dp_84"
        android:layout_height="@dimen/dp_38"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="106dp"
        android:text="@string/change_your_photo"
        android:textColor="#CCFFFFFF"
        android:textSize="@dimen/sp_14"
        app:sCornersRadius="@dimen/dp_8"
        app:sSelectorNormalColor="@color/transparent"
        app:sStrokeColor="#CCFFFFFF"
        app:sStrokeWidth="@dimen/dp_1"
        app:sUseSelector="true" />
</FrameLayout>