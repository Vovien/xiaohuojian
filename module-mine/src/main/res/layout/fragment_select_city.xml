<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jmbon.widget.tablayout.SlidingTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_27"
        android:layout_marginEnd="@dimen/dp_27"
        android:paddingTop="@dimen/dp_10"
        app:tl_iconVisible="false"
        app:tl_indicator_anim_duration="300"
        app:tl_indicator_anim_enable="true"
        app:tl_indicator_bounce_enable="false"
        app:tl_indicator_color="@color/color_currency"
        app:tl_indicator_corner_radius="6dp"
        app:tl_indicator_height="6dp"
        app:tl_indicator_width="12dp"
        app:tl_tab_space_equal="false"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="@color/text_color"
        app:tl_textSelectSize="16sp"
        app:tl_textUnSelectColor="#59373133"
        app:tl_textUnSelectSize="16sp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

</LinearLayout>