<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF9F9F9">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/city_recyclerview"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent"
        android:background="@color/colorF9F9F9" />

    <TextView
        android:id="@+id/cp_overlay"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/cp_overlay_bg"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="28sp"
        android:visibility="gone" />

    <!--右侧字母导航-->
    <com.tubewiki.mine.view.city.SideIndexBar
        android:id="@+id/side_index_bar"
        android:layout_width="@dimen/dp_20"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_98"
        app:cpIndexBarNormalTextColor="@color/text_color"
        app:cpIndexBarSelectedTextColor="@color/text_color"
        app:cpIndexBarTextSize="@dimen/dp_12" />

</FrameLayout>