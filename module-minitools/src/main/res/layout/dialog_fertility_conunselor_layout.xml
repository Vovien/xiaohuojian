<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_30"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fertility_counselor_dialog_bg">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_136"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@drawable/fertility_counselor_close_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="147dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="微信一对一生育咨询"
        android:textColor="@color/color_7f7f7f"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="193dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.allen.library.shape.ShapeTextView
        android:id="@+id/tv_wechat_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_12"
        android:paddingHorizontal="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_58"
        android:gravity="center"
        tools:text="微信号微信号微信号微信号微信号微信号微信号微信号"
        android:textColor="@color/color_262626"
        android:textSize="@dimen/sp_16"
        android:maxLines="1"
        android:ellipsize="end"
        app:shapeSolidColor="@color/color_F7F7F7"
        app:shapeCornersRadius="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/iv_qr_code"
        app:layout_constraintLeft_toLeftOf="@id/iv_qr_code"
        app:layout_constraintRight_toRightOf="@id/iv_qr_code"/>

    <com.allen.library.shape.ShapeTextView
        android:id="@+id/tv_save_picture"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="center"
        android:text="保存二维码"
        android:textColor="@color/color_currency"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:shapeSolidColor="@color/color_F1F1F1"
        app:shapeCornersRadius="@dimen/dp_14"
        app:layout_constraintHorizontal_weight="0.38"
        app:layout_constraintTop_toBottomOf="@id/tv_wechat_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_open_wechat"/>

    <com.allen.library.shape.ShapeTextView
        android:id="@+id/tv_open_wechat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center"
        android:text="复制微信号并打开微信"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:shapeSolidColor="@color/color_currency"
        app:shapeCornersRadius="@dimen/dp_14"
        app:layout_constraintHorizontal_weight="0.62"
        app:layout_constraintTop_toTopOf="@id/tv_save_picture"
        app:layout_constraintBottom_toBottomOf="@id/tv_save_picture"
        app:layout_constraintLeft_toRightOf="@id/tv_save_picture"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>