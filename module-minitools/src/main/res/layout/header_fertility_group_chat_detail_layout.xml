<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="@dimen/dp_166"
        android:layout_height="@dimen/dp_166"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_262626"
        android:textSize="@dimen/sp_14"
        tools:text="成都中医药大学第一附属医院" />

    <com.lihang.ShadowLayout
        android:id="@+id/sl_open_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal|bottom"
        app:hl_angle="0"
        app:hl_cornerRadius="@dimen/dp_16"
        app:hl_layoutBackground="@color/color_currency"
        app:hl_shadowColor="@color/color_currency"
        app:hl_shadowHiddenTop="true"
        app:hl_shadowLimit="@dimen/dp_24"
        app:hl_shadowOffsetY="@dimen/dp_12"
        app:shadow_shadowAlpha="0.4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_24"
            android:text="复制微信号并打开"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />

    </com.lihang.ShadowLayout>

</LinearLayout>