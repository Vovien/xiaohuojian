<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:elevation="0dp"
	app:cardCornerRadius="8dp"
	app:cardElevation="0dp"
	app:contentPadding="@dimen/dp_0">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ImageView
			android:id="@+id/imageCover"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scaleType="centerCrop"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/textPlayCount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/dp_6"
			android:layout_marginBottom="@dimen/dp_6"
			android:background="@drawable/icon_white_back_40_bg"
			android:drawablePadding="@dimen/dp_2"
			android:gravity="center_vertical"
			android:paddingStart="@dimen/dp_6"
			android:paddingTop="@dimen/dp_5"
			android:paddingEnd="@dimen/dp_6"
			android:paddingBottom="@dimen/dp_5"
			android:textColor="@color/white"
			android:textSize="@dimen/sp_10"
			app:drawableStartCompat="@drawable/icon_video_play_count_flag"
			app:layout_constraintBottom_toBottomOf="@id/imageCover"
			app:layout_constraintEnd_toEndOf="parent" />

		<TextView
			android:id="@+id/textVideoDesc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginTop="@dimen/dp_8"
			android:layout_marginEnd="@dimen/dp_8"
			android:ellipsize="end"
			android:lineHeight="@dimen/dp_20"
			android:maxLines="2"
			android:textColor="@color/color_262626"
			android:textSize="@dimen/sp_14"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/imageCover" />

		<ImageView
			android:id="@+id/imageAvatar"
			android:layout_width="@dimen/dp_14"
			android:layout_height="@dimen/dp_14"
			android:visibility="gone"
			app:layout_constraintBottom_toBottomOf="@id/textName"
			app:layout_constraintEnd_toStartOf="@id/textName"
			app:layout_constraintStart_toStartOf="@id/textVideoDesc"
			app:layout_constraintTop_toTopOf="@id/textName" />

		<TextView
			android:id="@+id/textName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dp_8"
			android:layout_marginEnd="@dimen/dp_8"
			android:layout_marginBottom="@dimen/dp_8"
			android:ellipsize="end"
			android:paddingStart="@dimen/dp_4"
			android:singleLine="true"
			android:textColor="@color/color_7F7F7F"
			android:textSize="@dimen/sp_12"
			android:visibility="gone"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/imageAvatar"
			app:layout_constraintTop_toBottomOf="@id/textVideoDesc"
			tools:text="用户id用户id用户用户id用户id用户用户id用户id用户用户id用户id用户用户id用户id用户用户id用户id用户" />

		<TextView
			android:id="@+id/textAD"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginTop="@dimen/dp_8"
			android:layout_marginBottom="@dimen/dp_8"
			android:background="@drawable/edit_input_border_e5_bg"
			android:paddingStart="@dimen/dp_6"
			android:paddingTop="@dimen/dp_2"
			android:paddingEnd="@dimen/dp_6"
			android:paddingBottom="@dimen/dp_2"
			android:text="广告"
            android:visibility="gone"
			android:textColor="@color/picture_color_e5"
			android:textSize="@dimen/sp_10"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/textVideoDesc" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>