<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingStart="@dimen/dp_20"
	android:paddingTop="@dimen/dp_8"
	android:paddingEnd="@dimen/dp_20"
	android:paddingBottom="@dimen/dp_8">

	<ImageView
		android:id="@+id/imageAlbumCover"
		android:layout_width="@dimen/dp_68"
		android:layout_height="102dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textVideoTitle"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/dp_10"
		android:lineHeight="@dimen/dp_25"
		android:singleLine="true"
		android:text="第1集"
		android:textColor="@color/white50"
		android:textSize="@dimen/sp_18"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/imageAlbumCover"
		app:layout_constraintTop_toTopOf="@id/imageAlbumCover" />

	<TextView
		android:id="@+id/textVideoDesc"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp_8"
		android:ellipsize="end"
		android:maxLines="2"
		android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
		android:textColor="@color/white"
		android:textSize="@dimen/sp_16"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@id/textVideoTitle"
		app:layout_constraintTop_toBottomOf="@id/textVideoTitle" />

	<TextView
		android:id="@+id/textVideoDuration"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp_8"
		android:text="05:46"
		android:textColor="@color/white50"
		app:layout_constraintStart_toStartOf="@id/textVideoTitle"
		app:layout_constraintTop_toBottomOf="@id/textVideoDesc" />
</androidx.constraintlayout.widget.ConstraintLayout>