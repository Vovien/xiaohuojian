<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_46"
    android:gravity="center_vertical"
    tools:parentTag="android.widget.RelativeLayout">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/line_bg" />

    <ImageView
        android:id="@+id/iv_hide"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_46"
        android:padding="@dimen/dp_12"
        android:src="@drawable/icon_answer_menu_keyword_down" />

    <View
        android:id="@+id/view_ver"
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_hide"
        android:background="@drawable/line_bg" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/view_ver"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_title_size"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"

                android:src="@drawable/icon_answer_menu_title_size" />

            <ImageView
                android:id="@+id/iv_title_size_disabled"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_title_size_disabled"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_bold"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_bold" />

            <ImageView
                android:id="@+id/iv_bold_disabled"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_bold_disabled"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_italic"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_italic" />

            <ImageView
                android:id="@+id/iv_italic_disabled"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_italic_disabled"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_ul"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_ul_order" />

            <ImageView
                android:id="@+id/iv_ul_disabled"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_ul_order_disabled"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_ol"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_ol_order" />


            <ImageView
                android:id="@+id/iv_ol_disabled"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_ol_order_disabled"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_quote"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_quote" />


            <ImageView
                android:id="@+id/iv_quote_disabled"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_quote_disabled"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_picture" />

            <ImageView
                android:id="@+id/iv_picture_disabled"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_picture_disabled"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_video" />

            <ImageView
                android:id="@+id/iv_video_disabled"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:padding="@dimen/dp_3"
                android:src="@drawable/icon_answer_menu_video_disabled"
                android:visibility="gone" />

        </LinearLayout>
    </HorizontalScrollView>

</merge>