<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/answer_top_white_bg"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/select_pregnant_line_sbg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.lihang.ShadowLayout
        android:id="@+id/fl_shiguan_pregnant"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="@dimen/dp_68"
        android:visibility="gone"
        app:hl_cornerRadius="@dimen/dp_8"
        app:hl_shadowColor="@color/transparent"
        app:hl_shadowHiddenTop="true"
        app:hl_shadowLimit="@dimen/dp_15"
        app:hl_strokeColor="@color/colorF9F9F9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_shiguan_pregnant_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="@string/home_shiguan_pregnant"
            android:textColor="@color/color_BFBFBF"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_shiguan_pregnant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_8"
            android:src="@drawable/icon_baby_tube_status_select" />

    </com.lihang.ShadowLayout>

    <com.lihang.ShadowLayout
        android:id="@+id/fl_ready_pregnant"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="@dimen/dp_5"
        app:hl_cornerRadius="@dimen/dp_8"
        app:hl_shadowColor="@color/transparent"
        app:hl_shadowHiddenTop="true"
        app:hl_shadowLimit="@dimen/dp_15"
        app:hl_strokeColor="@color/colorF9F9F9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_shiguan_pregnant"
        app:layout_goneMarginTop="@dimen/dp_68">

        <TextView
            android:id="@+id/tv_ready_pregnant_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="@string/home_select_read_pregnant"
            android:textColor="@color/color_BFBFBF"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_ready_pregnant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dp_23"
            android:src="@drawable/icon_ready_pregnant_normal" />

    </com.lihang.ShadowLayout>

    <com.lihang.ShadowLayout
        android:id="@+id/fl_have_pregnant"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_115"
        android:layout_marginTop="@dimen/dp_5"
        app:hl_cornerRadius="@dimen/dp_8"
        app:hl_shadowColor="@color/transparent"
        app:hl_shadowHiddenTop="true"
        app:hl_shadowLimit="@dimen/dp_15"
        app:hl_strokeColor="@color/colorF9F9F9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_ready_pregnant">

        <TextView
            android:id="@+id/tv_have_pregnant_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="@string/home_select_have_pregnant"
            android:textColor="@color/color_BFBFBF"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_have_pregnant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dp_23"
            android:src="@drawable/icon_pregnant_ing_naomal" />

    </com.lihang.ShadowLayout>

    <com.lihang.ShadowLayout
        android:id="@+id/fl_have_baby"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_115"
        android:layout_marginTop="@dimen/dp_5"
        app:hl_cornerRadius="@dimen/dp_8"
        app:hl_shadowColor="@color/transparent"
        app:hl_shadowHiddenTop="true"
        app:hl_shadowLimit="@dimen/dp_15"
        app:hl_strokeColor="@color/colorF9F9F9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_have_pregnant">

        <TextView
            android:id="@+id/tv_have_baby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="@string/home_select_have_baby"
            android:textColor="@color/color_BFBFBF"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_have_baby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dp_23"
            android:src="@drawable/icon_pregnant_have_baby_normal" />

    </com.lihang.ShadowLayout>

<!--        android:text="@string/home_confirm"-->
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="58dp"
        android:background="@drawable/select_pregnant_btn"
        android:enabled="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_have_baby" />

</androidx.constraintlayout.widget.ConstraintLayout>
