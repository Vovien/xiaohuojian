<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:left="5dp" android:right="5dp">
                <shape>
                    <corners android:radius="8dp"/>
                    <solid android:color="@color/color_currency"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item android:left="5dp" android:right="5dp">
                <shape>
                    <solid android:color="@android:color/white"/>
                    <corners android:radius="8dp"/>
                    <stroke android:width="1dp" android:color="#0d000000" />
                    <solid android:color="#ffffffff" />
                    <corners android:radius="8dp" />
                    <item android:name="android:shadowColor">#3000000</item>
                    <item android:name="android:shadowDy">4</item>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>